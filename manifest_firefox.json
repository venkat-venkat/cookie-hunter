{
    "name": "Cookie Hunter",
    "description": "View, edit, delete and search for cookies",
    "version": "1.5",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "contextualIdentities",
        "cookies",
        "storage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "*://*/*"
    ],
    "options_ui": {
        "page": "cookie-manager.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "48": "icons/111.png",
        "96": "icons/96.png"
    },
    "browser_action": {
        "default_title": "Open Cookie Hunter"
    },
    "page_action": {
        "default_icon": {
            "48": "icons/111.png",
            "96": "icons/96.png"
        }
    },
    "applications": {
        "gecko": {
            "id": "aruld3042@gmail.com"
        }
    }
}
